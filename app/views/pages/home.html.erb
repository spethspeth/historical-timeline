              <!-- <h2 id="card-title"><%=timeline.name%></h2> -->
            </div>
            <div class="card-title-description-homepage">
              <h2 id="card-title-1"><%=timeline.name%></h2>
                <p id="card-description-homepage-1"><%=timeline.description%></p>
            </div>
              <!-- <div class="flip-card-back-1">
                <h2 id="card-title-1"><%=timeline.name%></h2>
                <p id="card-description-1"><%=timeline.description%></p>
              </div> -->
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center homepage-podcast-container flex-wrap">
    <div class="podcast">
      <h1>PODCAST</h1>
      <iframe style="border-radius:12px" src="https://open.spotify.com/embed/show/4yGc7Y9q3mPdwj3IhIVWDG?utm_source=generator" width="100%" height="232" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
    </div>
  </div>
</div>

