<h2>My Dashboard</h2>
<%# First row  %>
  <div class="dashboard-first-box">
    <%# Your Timeline %>
      <div class="dashboard-card-container">
        <h3>My timelines</h3>
        <div class="dashboard-cards">
          <% unless @timelines.empty? %>
            <% @timelines.each do |timeline| %>
              <div class="dashboard-col" ontouchstart="this.classList.toggle('hover');">
                <%= link_to timeline_path(timeline), :class => 'dashboard-card' do %>
                  <div class="dashboard-card-index">
                    <div class="dashboard-background-front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path timeline.photo.key %>')">
                      <div class="dashboard-inner">
                        <p><%=timeline.name%></p>
                      </div>
                    </div>
                    <div class="dashboard-back">
                      <div class="dashboard-inner">
                        <p><%=timeline.description%></p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="dashboard-card">
              <p>You don't have timelines.</p>
            </div>
          <% end %>
        </div>
      </div>
    <%# Your Bookmarks %>
      <div class="dashboard-card-container">
        <h3>My Bookmarks</h3>
        <div class="dashboard-cards">
          <% unless @bookmarks.empty? %>
            <% @bookmarks.each do |bookmark| %>
              <div class="dashboard-col" ontouchstart="this.classList.toggle('hover');">
                <%= link_to timeline_path(bookmark.timeline), :class => 'dashboard-card' do %>
                  <div class="dashboard-card-index">
                    <div class="dashboard-background-front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path bookmark.timeline.photo.key %>')">
                      <div class="dashboard-inner">
                        <p><%=bookmark.timeline.name%></p>
                      </div>
                    </div>
                    <div class="dashboard-back">
                      <div class="dashboard-inner">
                        <p><%=bookmark.timeline.description%></p>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% else %>
          <div class="dashboard-card">
            <p>You don't have bookmarks.</p>
          </div>
          <% end %>
        </div>
      </div>
  </div>
<%# Second row %>
