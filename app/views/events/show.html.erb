<div class="container-event">
  <div class="frontpage">
    <div class="fp-cell fp-cell--1">
      <div class="fp-item">
        <% @image = @event.photo.key %>
        <% if @image %>
          <div class="image-event" style="background-image: url('<%= cl_image_path @event.photo.key %>');"></div>
        <% else %>
          <div class="image-event"></div>
        <% end %>
      </div>
    </div>
    <div class="fp-cell fp-cell--2">
      <div class="fp-item">
      <h3><%=@event.name%></h3>
      <p id="event-description"><%=@event.description%></p>
      </div>
    </div>
    <div class="fp-cell fp-cell--3">
      <div class="fp-item">
      <h4><%=@event.start_day.nil? ? "" : "#{@event.start_day} /" %> <%=@event.start_month.nil? ? "" : "#{@event.start_month} /" %> <%=@event.start_year.abs%> <%=@event.start_year.negative? ? "B.C." : "A.D." %></h4>
      <h4><%=@event.end_day.nil? ? "" : "#{@event.end_day} /" %> <%=@event.end_month.nil? ? "" : "#{@event.end_month} /" %> <%=@event.end_year.nil? ? "" : @event.end_year.abs %> <%=@event.end_year.nil? ? "" : (@event.end_year.negative? ? "B.C." : "A.D.") %></h4>
      </div>
    </div>
    <div class="fp-cell fp-cell--4">
      <div class="fp-item">
        <% if policy(@event).edit? %>
          <div data-controller="editevent">
            <button class = "submit-btn" data-action="click->editevent#display">Edit</button>
              <div data-editevent-target="form" class="d-none">
                <%= render "events/edit" %>
              </div>
          </div>
        <% end %>
        <div class = "mt-3">
          <%= link_to "Dashboard", dashboard_path, class: "submit-btn" %>
        </div>
      </div>
    </div>
  </div>
</div>
