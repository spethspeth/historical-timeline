<div class="container-event">
  <div class="frontpage">
    <div class="fp-cell fp-cell--1">
      <div class="fp-item">
        <div class="image-event" style="background-image: url('<%= cl_image_path @event.photo.key %>');"></div>
      </div>
    </div>
    <div class="fp-cell fp-cell--2">
      <div class="fp-item">
      <h3><%=@event.name%></h3>
      <p id="event-description"><%=@event.description%></p>
      </div>
    </div>
    <div class="fp-cell fp-cell--3">
      <div class="fp-item">
      <h4><%=@event.start_date.strftime("%m/%d/%Y")%></h4>
      <h4><%=@event.end_date.nil? ? "" : @event.end_date.strftime("%m/%d/%Y")%></h4>
      </div>
    </div>
    <div class="fp-cell fp-cell--4">
      <div class="fp-item">
        <% if policy(@event).edit? %>
          <div data-controller="editevent">
            <button class = "submit-btn" data-action="click->editevent#display">Edit</button>
              <div data-editevent-target="form" class="d-none">
                <%= render "events/edit" %>
              </div>
          </div>
        <% end %>

        <% if policy(@event).destroy? %>
        <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure ?' }, class: "submit-btn" %>
        <% end %>

        <%= link_to "Dashboard", dashboard_path, class: "submit-btn" %>
      </div>
    </div>
  </div>
</div>
