<div class="text-center">
<h1>New Timeline</h1>
<div data-controller="newtimeline">
  <%= simple_form_for(@timeline, remote: true, data: { newtimeline_target: "form", action: "submit->newtimeline#submitForm" }) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :events, input_html: { class: "js-matcher-multiple"} %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: "submit-btn"%>
  <% end %>
</div>

<div class="mt-3">
  <div data-controller="newevent">
    <button class = "submit-btn" data-action="click->newevent#display">Add a new Event</button>
      <div data-newevent-target="form" class="d-none">
        <%= render "events/new" %>
      </div>
  </div>
  <div class="mt-3">
    <%= link_to "Dashboard", dashboard_path, class: "submit-btn" %>
  </div>
</div>
</div>
