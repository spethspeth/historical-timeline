<div class="timelineshowpagewrapper">
  <div id='timeline-embed'>
    <div data-controller="timeline" data-timeline-dates-value="<%= @timelinejson.to_json%>">
    </div>
  </div>

  <div class="container-timeline-actions">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-sm-12 col-xs-12">
        <div data-controller="reviews">
          <div class="mt-3 reviews" data-revies-target="newreviews">
          <div data-reviews-target="newreviews">
            <% if @timeline.reviews.blank? %>
            <% else %>
              <% @timeline.reviews.each do |review| %>
                <%= render 'review', review: review %>
              <% end %>
            <% end %>
          </div>
        </div>
          <div class = "text-center mt-3">
            <% if policy(@review).new? %>
              <div data-controller="newreview">
                <button class = "submit-btn" data-action="click->newreview#display">Write a review</button>
                <div data-newreview-target="form" class="d-none">
                  <%= render "reviews/new" %>
                </div>
              </div>
            <%end%>
          </div>
      </div>
      </div>
      <div class="col-md-4 col-sm-12 col-xs-12">
        <div class = "text-center mt-3">
          <% if @bookmark.empty? %>
            <%= link_to 'Bookmark it', timeline_bookmarks_path(@timeline), method: :post, class: "submit-btn"  %>
          <% else %>
            <%= link_to 'Unbookmark it', timeline_bookmark_path(@timeline), method: :delete, class: "submit-btn"  %>
          <% end%>
        </div>
        <div class = "text-center mt-3">
          <% if policy(@timeline).edit? %>
            <div data-controller="edittimeline">
              <button class = "submit-btn" data-action="click->edittimeline#display">Edit</button>
                <div data-edittimeline-target="form" class="d-none">
                  <%= render "timelines/edit" %>
                </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
