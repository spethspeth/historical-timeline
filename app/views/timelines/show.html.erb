<div id='timeline-embed' style="width: 100%"></div>
  <div data-controller="timeline" data-timeline-dates-value="<%=@timelinejson.to_json%>">
  </div>
</div>
<div class="text-center">
<tr>
    <% if policy(@timeline).edit? %>
      <td><%= link_to 'Edit', edit_timeline_path(@timeline), class: "submit-btn"  %></td>
    <% end %>
    <% if policy(@timeline).destroy? %>
      <td><%= link_to 'Destroy', @timeline, method: :delete, data: { confirm: 'Are you sure ?' }, class: "submit-btn" %></td>
    <% end %>
    <% if @bookmark.empty? %>
      <td> <%= link_to 'Bookmark it', timeline_bookmarks_path(@timeline), method: :post, class: "submit-btn"  %> </td>
    <% else %>
      <td> <%= link_to 'Unbookmark it', timeline_bookmark_path(@timeline), method: :delete, class: "submit-btn"  %> </td>
    <% end%>
  </tr>
</div>
