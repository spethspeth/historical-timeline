<div class="form-show-container">
  <%= simple_form_for(@timeline) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.association :events, input_html: { data: { controller: "select2" } } %>
      <%= f.association :eras, input_html: { data: { controller: "select2" } } %>
      <%= f.submit class: "submit-btn" %>
    </div>
  <% end %>
</div>
