<div class="form-show-container">
  <%= simple_form_for(@timeline) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.association :events, input_html: { data: { controller: "select2" } } %>
      <%= f.submit class: "submit-btn" %>
    </div>
  <% end %>
</div>

<div class="mt-3">
<% if policy(@timeline).destroy? %>
  <td><%= link_to 'Destroy', @timeline, method: :delete, data: { confirm: 'Are you sure ?' }, class: "submit-btn" %></td>
<% end %>
</div>
